{
  "ci": {
    "collect": {
      "staticDistDir": ".output/public",
      "url": [
        "http://localhost/",
        "http://localhost/about",
        "http://localhost/portfolio",
        "http://localhost/blog",
        "http://localhost/contact"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --headless",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "skipAudits": [
          "canonical",
          "uses-http2"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],
        
        "first-contentful-paint": ["warn", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "speed-index": ["warn", {"maxNumericValue": 3000}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        
        "interactive": ["warn", {"maxNumericValue": 3500}],
        "first-meaningful-paint": ["warn", {"maxNumericValue": 2000}],
        
        "resource-summary:document:size": ["error", {"maxNumericValue": 50000}],
        "resource-summary:script:size": ["warn", {"maxNumericValue": 200000}],
        "resource-summary:stylesheet:size": ["warn", {"maxNumericValue": 50000}],
        "resource-summary:image:size": ["warn", {"maxNumericValue": 500000}],
        "resource-summary:font:size": ["warn", {"maxNumericValue": 100000}],
        
        "unused-css-rules": ["warn", {"maxLength": 5}],
        "unused-javascript": ["warn", {"maxLength": 5}],
        "modern-image-formats": "off",
        "offscreen-images": "warn",
        "render-blocking-resources": "warn",
        "unminified-css": "error",
        "unminified-javascript": "error",
        
        "viewport": "error",
        "document-title": "error",
        "meta-description": "error",
        "link-text": "error",
        "crawlable-anchors": "error",
        "is-crawlable": "error",
        
        "color-contrast": "error",
        "heading-order": "warn",
        "link-name": "error",
        "button-name": "error",
        "image-alt": "error",
        "label": "error",
        "landmark-one-main": "warn",
        "list": "warn",
        "listitem": "warn",
        "definition-list": "warn",
        "dlitem":  "warn",
        "bypass": "warn",
        "focus-traps": "warn",
        "focusable-controls": "warn",
        "interactive-element-affordance": "warn",
        "logical-tab-order": "warn",
        "managed-focus": "warn",
        "offscreen-content-hidden": "warn",
        "use-landmarks": "warn",
        "valid-lang": "error",
        "video-caption": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "command": "npx serve .output/public -l 3000",
      "port": 3000
    }
  }
}