{
  "name": "sumit-personal-site",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Multi-persona personal website featuring blog, portfolio, and resume",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "validate:content": "node scripts/validate-content.js",
    "build:sitemap": "tsx scripts/generate-sitemap.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "playwright test",
    "test:perf": "node scripts/run-lh-ci.mjs",
    "check": "pnpm lint && pnpm validate:content && nuxt generate --dry-run"
  },
  "keywords": [
    "nuxt",
    "typescript",
    "tailwind",
    "blog",
    "portfolio",
    "static-site"
  ],
  "author": "Sumit Kumar Pandit",
  "license": "MIT",
  "dependencies": {
    "@nuxt/content": "^2.13.2",
    "@nuxt/image": "^1.11.0",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@vueuse/core": "^13.9.0",
    "nuxt": "^3.13.0",
    "vue": "^3.4.38",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@nuxt/devtools": "^1.4.2",
    "@nuxt/eslint-config": "^0.5.7",
    "@playwright/test": "^1.47.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.10.0",
    "feather-icons": "^4.29.2",
    "gray-matter": "^4.0.3",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vue-tsc": "^3.0.7"
  }
}