{
  "name": "sumit-personal-site",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Multi-persona personal website featuring blog, portfolio, and resume",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "validate:content": "tsx scripts/validate-content.ts",
    "build:sitemap": "tsx scripts/generate-sitemap.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "playwright test",
    "test:perf": "node scripts/run-lh-ci.mjs",
    "check": "pnpm lint && pnpm validate:content && nuxt generate --dry-run"
  },
  "keywords": ["nuxt", "typescript", "tailwind", "blog", "portfolio", "static-site"],
  "author": "Sumit Kumar Pandit",
  "license": "MIT",
  "dependencies": {
    "@nuxt/content": "^2.13.2",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "nuxt": "^3.13.0",
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.4.2",
    "@nuxt/eslint-config": "^0.5.7",
    "@playwright/test": "^1.47.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.10.0",
    "feather-icons": "^4.29.2",
    "gray-matter": "^4.0.3",
    "jsdom": "^25.0.0",
    "lighthouse-ci": "^0.12.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}